@model IEnumerable<TO.PacienteTO>
@{
    ViewBag.Title = "Lista de Pacientes";
}

<h2>Lista de Pacientes</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@Html.AntiForgeryToken()

<p>
    @Html.ActionLink("Adicionar Novo Paciente", "Create", "Paciente", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Ver Lista de Carros", "Index", "Carro", null, new { @class = "btn btn-info" })
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.NomeMae)</th>
        <th>@Html.DisplayNameFor(model => model.Nascimento)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="paciente-row-@item.Id">
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.NomeMae)</td>
            <td>@Html.DisplayFor(modelItem => item.Nascimento)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                <a href="#" class="delete-link" data-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>

<div id="deleteModal" class="modal-overlay">
    <div class="modal-content-custom">
        <h5>Confirmar Exclusão</h5>
        <p>Você tem certeza que deseja excluir este paciente?</p>
        <div class="modal-footer-custom">
            <button type="button" class="btn btn-secondary" id="cancel-delete-btn">Cancelar</button>
            <button type="button" class="btn btn-danger" id="confirm-delete-btn">Excluir</button>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var pacienteIdToDelete;
            var deleteModal = $('#deleteModal');

            $('.delete-link').on('click', function (e) {
                e.preventDefault();
                pacienteIdToDelete = $(this).data('id');
                deleteModal.css('display', 'flex');
            });

            $('#cancel-delete-btn').on('click', function () {
                deleteModal.hide();
            });

            deleteModal.on('click', function (e) {
                if ($(e.target).is(deleteModal)) {
                    deleteModal.hide();
                }
            });

            $('#confirm-delete-btn').on('click', function () {
                $.ajax({
                    url: '@Url.Action("Delete", "Paciente")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        id: pacienteIdToDelete
                    },
                    success: function (result) {
                        deleteModal.hide();
                        $('#paciente-row-' + pacienteIdToDelete).fadeOut(500, function () {
                            $(this).remove();
                        });

                        if (result.message) {
                            var alertHtml = '<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                                result.message +
                                '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                                '</div>';
                            $('h2').after(alertHtml);
                            window.setTimeout(function() {
                                $(".alert").fadeTo(500, 0).slideUp(500, function(){
                                    $(this).remove();
                                });
                            }, 5000);
                        }
                    },
                    error: function (err) {
                        alert('Ocorreu um erro ao tentar excluir o paciente.');
                        deleteModal.hide();
                    }
                });
            });
        });
    </script>
}