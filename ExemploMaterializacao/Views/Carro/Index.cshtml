@model IEnumerable<TO.CarroTO>

@{
    ViewBag.Title = "Lista de Carros";
}

<h2>Lista de Carros</h2>
@Html.AntiForgeryToken()

<p>
    @Html.ActionLink("Adicionar Novo Carro", "Create", "Carro", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Ver Lista de Pacientes", "Index", "Paciente", null, new { @class = "btn btn-info" })
</p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Marca)</th>
        <th>@Html.DisplayNameFor(model => model.Modelo)</th>
        <th>@Html.DisplayNameFor(model => model.Ano)</th>
        <th>@Html.DisplayNameFor(model => model.Placa)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr id="carro-row-@item.Id">
            <td>@Html.DisplayFor(modelItem => item.Marca)</td>
            <td>@Html.DisplayFor(modelItem => item.Modelo)</td>
            <td>@Html.DisplayFor(modelItem => item.Ano)</td>
            <td>@Html.DisplayFor(modelItem => item.Placa)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                <a href="#" class="delete-link" data-id="@item.Id" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</a>
            </td>
        </tr>
    }
</table>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Você tem certeza que deseja excluir este carro?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirm-delete-btn">Excluir</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var carroIdToDelete;

            $('.delete-link').on('click', function (e) {
                e.preventDefault();
                carroIdToDelete = $(this).data('id');
            });

            $('#confirm-delete-btn').on('click', function () {
                var modal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));

                $.ajax({
                    url: '@Url.Action("Delete", "Carro")',
                    type: 'POST',
                    data: {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val(),
                        id: carroIdToDelete
                    },
                    success: function (result) {
                        modal.hide();
                        $('#carro-row-' + carroIdToDelete).fadeOut(500, function () {
                            $(this).remove();
                        });
                    },
                    error: function (err) {
                        alert('Ocorreu um erro ao tentar excluir o carro.');
                    }
                });
            });
        });
    </script>
}